@model LoginViewModel


<br />
<br />
<!-- Pills navs -->

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <form asp-controller="Account" asp-action="Login" method="post" role="form" class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4 pb-5">

                            <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                            <p class="text-white-50 mb-5">Please enter your login and password!</p>

                            <div asp-validation-summary="All" class="text-white"></div>
                            <input type="hidden" asp-for="ReturnUrl" />

                            <div class="form-outline form-white mb-4">
                                <label asp-for="UserName" class="form-label" for="typeEmailX">UserName</label>
                                <input asp-for="UserName" id="typeEmailX" class="form-control form-control-lg m-2" />
                                <span asp-validation-for="UserName" class="text-white"></span>
                                
                            </div>

                            <div class="form-outline form-white mb-4">
                                <label asp-for="Password" class="form-label" for="typePasswordX">Password</label>
                                <input asp-for="Password" id="typePasswordX" class="form-control form-control-lg m-2" />
                                <span asp-validation-for="Password" class="text-white"></span>
                                
                            </div>

                            <p class="small mb-5 pb-lg-2"><a class="text-white-50" href="#!">Forgot password?</a></p>

                            <button class="btn btn-outline-light btn-lg px-5" type="submit" value="Login">Login</button>

                            

                        </div>

                        <div>
                            <p class="mb-0">
                                Don't have an account? <a asp-controller="account" asp-action="Register" class="">Sign Up</a>
                            </p>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<br />